<?xml version='1.0' encoding='utf-8'?>
<widget id="org.arg.discount.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>argDiscountApp</name>
    <description>
        No Description.
    </description>
    <author email="ingjeanpaulrojas@gmail.com" href="http://ingjprojas.zz.com.ve">
        Jean Paul Rojas
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.4" />
    <plugin name="cordova-plugin-splashscreen" spec="5.0.3" />
    <icon src="www/img/favicon.png" />
    <access origin="*" />
    <allow-navigation href="http://*/*" />
    <preference name="android-minSdkVersion" value="19"/>
    <preference name="android-targetSdkVersion" value="29"/>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="splash2.jpg" qualifier="land-hdpi"/>
        <splash src="splash3.jpg" qualifier="land-ldpi"/>
        <splash src="splash4.jpg" qualifier="land-mdpi"/>
        <splash src="splash5.jpg" qualifier="land-xhdpi"/>
        <splash src="splash2.jpg" qualifier="port-hdpi"/>
        <splash src="splash3.jpg" qualifier="port-ldpi"/>
        <splash src="splash4.jpg" qualifier="port-mdpi"/>
        <splash src="splash5.jpg" qualifier="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="browser" spec="^6.0.0" />
    <preference name="SplashScreenBackgroundColor" value="rgb(81,45,168)"/>
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashScreenWidth" value="750" />
    <preference name="SplashScreen" value="splash2.jpg" />
    <preference name="SplashScreenHeight" value="1000" />
    <preference name="AutoHideSplashScreen" value="true"/>
    <preference name="SplashShowOnlyFirstTime" value="false"/>
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="FadeSplashScreen" value="true"/>
    <preference name="SplashScreenDelay" value="3000"/>
    <splash src="splash1.jpg"/>
</widget>
